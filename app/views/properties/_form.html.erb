<%= form_for @property, url: properties_path do |form| %>

  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= @property.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @property.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "property">
    <%= form.label :物件名 %>
    <%= form.text_field :name %>
  </div>
  <div class="property">
    <%= form.label :賃料 %>
    <%= form.text_field :money %>
  </div>
  <div class="property">
    <%= form.label :住所 %>
    <%= form.text_field :address %>
  </div>
  <div class="property">
    <%= form.label :築年数 %>
    <%= form.text_field :age %>
  </div>
  <div class="property">
    <%= form.label :備考 %>
    <%= form.text_area :content %>
  </div>

  <%= form.fields_for :nearest_stations ,url: properties_path do |form| %>
    <h2>最寄り駅</h2>
    <div class="property">
    <%= form.label :路線名 %>
    <%= form.text_field :route %>
    </div>
    <div class="property">
    <%= form.label :駅名 %>
    <%= form.text_field :station %>
    </div>
    <div class="property">
    <%= form.label :徒歩分数 %>
    <%= form.text_field :minute %>
    </div>
  <% end %>

  <%= form.submit :登録する %>

<% end %>

<%= link_to "一覧に戻る", properties_path %>
